{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "auto",
    "extends": [
        ":automergePr",
        ":configMigration",
        ":disableDependencyDashboard",
        ":enablePreCommit",
        ":enableRenovate",
        ":ignoreUnstable",
        ":label(renovate)",
        ":maintainLockFilesWeekly",
        ":prConcurrentLimit20",
        ":prImmediately",
        ":rebaseStalePrs",
        ":semanticPrefixFixDepsChoreOthers",
        "group:unitTest",
        "workarounds:all"
    ],
    "platformAutomerge": true,
    "prHourlyLimit": 10,
    "requiredStatusChecks": [
        "test"
    ],
    "timezone": "Europe/Oslo",
    "vulnerabilityAlerts": {
        "enabled": true,
        "groupName": "vulnerabilityAlerts",
        "labels": [
            "vulnerability"
        ],
        "prCreation": "immediate",
        "schedule": []
    },
    "osvVulnerabilityAlerts": true,
    "packageRules": [
        {
            "automerge": false,
            "description": "Never automerge major updates",
            "matchUpdateTypes": [
                "major"
            ]
        },
        {
            "addLabels": [
                "automerge"
            ],
            "automerge": true,
            "description": "Automerge non-major dependencies",
            "matchUpdateTypes": [
                "lockFileMaintenance",
                "minor",
                "patch",
                "pin",
                "digest"
            ]
        },
        {
            "addLabels": [
                "automerge"
            ],
            "automerge": true,
            "description": "Automerge dev dependencies regardless of update type",
            "matchDepTypes": [
                "devDependencies"
            ]
        },
        {
            "addLabels": [
                "automerge"
            ],
            "automerge": true,
            "description": "Automerge Python dependencies",
            "matchManagers": [
                "poetry",
                "pep723",
                "pep621",
                "pip_requirements",
                "pip_setup",
                "setup-cfg"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "stabilityDays": 3
        },
        {
            "addLabels": [
                "automerge"
            ],
            "automerge": true,
            "description": "Automerge Ansible community.general updates",
            "matchPackagePatterns": [
                "^ansible",
                "community.general"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "automerge": false,
            "description": "Update Docker dependencies, including base images",
            "matchDatasources": [
                "docker"
            ]
        },
        {
            "addLabels": [
                "automerge"
            ],
            "automerge": true,
            "description": "Automerge Python minor updates",
            "matchDepNames": [
                "python"
            ],
            "matchUpdateTypes": [
                "minor"
            ]
        },
        {
            "addLabels": [
                "automerge"
            ],
            "automerge": true,
            "description": "Group linter updates",
            "matchFileNames": [
                ".pre-commit-config.yaml"
            ]
        },
        {
            "addLabels": [
                "automerge"
            ],
            "automerge": true,
            "description": "Group GitHub Actions updates",
            "matchFileNames": [
                ".github/**/*.yaml",
                ".github/**/*.yml"
            ]
        }
    ]
}
